<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@mipmap/b5a"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="30dp" />
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/my_set_hei"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/my_msg_hei" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/user"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="70dp"
                android:id="@+id/my_img"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/my_ximg"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="70dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                fresco:roundAsCircle="true"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImage="@mipmap/qq01"
                fresco:placeholderImageScaleType="centerCrop"
                android:visibility="gone"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录/注册>"
                    android:layout_marginTop="80dp"
                    android:textColor="#e9e3e3"
                    android:id="@+id/my_login"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/my_nickname"
                    android:textColor="#e82e11"
                    android:layout_marginTop="80dp"
                    android:visibility="gone"
                    android:text="sss"
                    android:textSize="30dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@mipmap/mine_photo"
            />
    </LinearLayout>
</RelativeLayout>
