<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bawei.jingdongxiangmu.deng.PopleActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/back"
            android:layout_gravity="center"
            android:id="@+id/my_back3"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="30dp"
            android:textColor="#1b1717"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd9d9"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/my_tou"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="20dp"
            />
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/my_ximg"
            android:layout_marginLeft="25dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            fresco:roundAsCircle="true"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@mipmap/qq01"
            fresco:placeholderImageScaleType="centerCrop"
            />
        <ImageView
            android:layout_width="13dp"
            android:layout_height="30dp"
            android:background="@mipmap/hahaha"
            android:layout_gravity="center"
            android:layout_marginRight="4dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd9d9"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/my_yhuname"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王书强"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="13dp"
            android:layout_height="30dp"
            android:background="@mipmap/hahaha"
            android:layout_gravity="center"
            android:layout_marginRight="4dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd9d9"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/my_nickname3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王书强"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="13dp"
            android:layout_height="30dp"
            android:background="@mipmap/hahaha"
            android:layout_gravity="center"
            android:layout_marginRight="4dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd9d9"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保密"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="13dp"
            android:layout_height="30dp"
            android:background="@mipmap/hahaha"
            android:layout_gravity="center"
            android:layout_marginRight="4dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd9d9"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出生日期"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-01-01"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="13dp"
            android:layout_height="30dp"
            android:background="@mipmap/hahaha"
            android:layout_gravity="center"
            android:layout_marginRight="4dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd9d9"
        />
</LinearLayout>
